{
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "textFile": "build/debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "lib/utilities.wasm",
      "textFile": "build/utilities.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": true,
      "noAssert": false
    }
  },
  "options": {
    "importMemory": false,
    "noExportMemory": false,
    "runtime": "incremental",
    "enable": ["simd"],
    "pedantic": true,
    "stats": false,
    "showConfig": false,
    "bindings": "esm"
  }
}